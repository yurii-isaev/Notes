@model SalesCrm.Controllers.ViewModels.NewsViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create News";
}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb">
    <button type="button" class="btn btn-secondary" onclick="goBack()"
     style="margin-bottom:40px;">
        < Back
    </button>
</nav>

<h1>Create News</h1>

<form method="post" action="#">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title">
    </div>
    <div class="mb-3">
        <label class="form-label">Text</label>
        <input type="text" class="form-control" asp-for="Text">
    </div>
    <div class="mb-3">
        <label class="form-label">Publication date</label>
         <input asp-for="CreateDate" class="form-control date"/>
        @* <input id="publicationDateInput" type="text" class="form-control date" asp-for="Date"> *@
    </div>
    <div class="mb-3">
        <label class="form-label">Is active</label>
        <input type="checkbox" checked="checked" asp-for="IsActive">
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

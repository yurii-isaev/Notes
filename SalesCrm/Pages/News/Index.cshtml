@page "/News"
@using SalesCrm.Pages.Shared.Pagination
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel

@{
    ViewData["Title"] = "News cards page";
}

<h1 class="display-6 text-center">
    @ViewData["Title"]
</h1>

<div class="row">
    <div class="col-md-4">
        <form method="get" asp-page="Index" asp-handler="Index">
            <div class="form-group">
                <label class="form-label">Search keywords:</label>
                <div class="input-group">
                    <input type="text" class="form-control"
                           name="keyword" placeholder="Enter keywords..."
                           value="@ViewBag.keyword">
                    <button class="btn btn-secondary" type="submit">Search</button>
                </div>
            </div>
        </form>
    </div>
    
    <div class="col-md-7" style="padding-top:30px">
        <div class="text-md-end">
            <a class="btn btn-primary" asp-page="Create">
                Create News
            </a>
        </div>
    </div>
</div>

<br/> <br/>


<div class="row">
    @foreach (var item in Model.NewsList)
    {
        <div class="col-sm-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">@item.PublishedAt</p>

                    <div class="btn-group">
                        <a class="btn btn-outline-primary button" asp-page="Edit" asp-route-newsId="@item.Id">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                            edit
                        </a>

                        <form formmethod="post" asp-page-handler="Index" asp-route-id="@item.Id"
                              onclick="return confirm('Are you sure you want to delete this?')">
                            <button type="submit" class="btn btn-outline-danger button">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                                delete
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    }
</div>

@Html.Partial("Shared/Pagination/_Pagination", new PaginationViewModel
{
    ActionName = "Index",
    PageNumber = Model.PageNumber,
    PageSize = Model.PageSize,
    IsPreviousPageAvailable = Model.IsPreviousPageAvailable,
    IsNextPageAvailable = Model.IsNextPageAvailable,
    TotalPages = Model.TotalPages
})

<style>
    table {
      padding: 10px;
    }
    
    td, th {
      padding: 10px;
    }
    
    .btn-group {
        display: flex;
        justify-content: space-between;
    }
        
    .btn-group .btn {
        flex-grow: 1;
        margin: 0 5px;
    }
    
    .button {
      padding:0.1rem 0.9rem;
      width: 100px;
    }
</style>
@page "/manager/news"
@model IndexModel

@{
    ViewData["Title"] = "News cards page";
}

<h1 class="display-6 text-center">
    @ViewData["Title"]
</h1>

<div class="row">
    <div class="col-md-8">
        <form id="filterForm" method="post" asp-action="index" asp-route-Fill="true">
            <div class="row">
                <div class="col-md-8">
                    <label class="form-label">Search keywords:</label>
                    <div class="input-group">
                        <input value="@ViewBag.keyword"
                               type="text" class="form-control"
                               name="keyword" placeholder="Enter keywords...">
                        <button class="btn btn-success" type="submit">Search</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4" style="margin-top:19px!important">
        <partial name="../Shared/_CreateButtonPartial.cshtml"></partial>
    </div>
</div> <br/> <br/>


<div class="row">
    @foreach (var item in Model.NewsList)
    {
        <div class="col-sm-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <div>
                        <button class="btn btn-outline-primary button"
                                asp-route-id="@item.Id"
                                onclick="location.href='@Url.Action("Edit", new {id = item.Id})'">
                            edit
                        </button>
                        <button class="btn btn-outline-danger button"
                                onclick="showConfirmationDialog(event,'Are you sure you want to delete this news?',
                                 '@Url.Page("News", "Delete", new {id = item.Id})')"
                                asp-page-handler="Delete"
                                data-id="@item.Id">
                            delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts
{
    @Html.Partial("../Components/DeleteModal/_DeleteConfirmationModal")
}

<style>
    table {
      padding: 10px;
    }
    
    td, th {
      padding: 10px;
    }
    
    .button {
      padding:0.1rem 0.9rem
    }
</style>
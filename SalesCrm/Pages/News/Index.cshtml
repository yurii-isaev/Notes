@page "/News"
@model IndexModel

@{
    ViewData["Title"] = "News cards page";
}

<h1 class="display-6 text-center">
    @ViewData["Title"]
</h1>

<div class="row">
    <div class="col-md-8">
        <form id="filterForm" method="post" asp-action="index" asp-route-Fill="true">
            <div class="row">
                <div class="col-md-8">
                    <partial name="Shared/_SearcherPartial"></partial>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-4" style="margin-top:19px!important">
        <a class="btn btn-primary" asp-page="Create">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Create News
        </a>
    </div>
</div> <br/> <br/>


<div class="row">
    @foreach (var item in Model.NewsList)
    {
        <div class="col-sm-6 col-lg-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>

                    <div class="btn-group">

                        <a class="btn btn-outline-primary button" asp-page="Edit" asp-route-newsId="@item.Id">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                            edit
                        </a>

                        <form formmethod="post" asp-page-handler="Index" asp-route-id="@item.Id"
                              onclick="return confirm('Are you sure you want to delete this?')">
                            <button type="submit" class="btn btn-outline-danger button">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                                delete
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    table {
      padding: 10px;
    }
    
    td, th {
      padding: 10px;
    }
    
    .btn-group {
        display: flex;
        justify-content: space-between;
    }
        
    .btn-group .btn {
        flex-grow: 1;
        margin: 0 5px;
    }
    
    .button {
      padding:0.1rem 0.9rem;
      width: 100px;
    }
</style>